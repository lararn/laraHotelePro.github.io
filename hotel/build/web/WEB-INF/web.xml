<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>regservlet.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>loginservlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reservation</servlet-name>
        <servlet-class>resservlet.reservation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contact_details</servlet-name>
        <servlet-class>cdetailservlet.contact_details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guest_details</servlet-name>
        <servlet-class>gdetailservlet.guest_details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>flight_details</servlet-name>
        <servlet-class>fdetailservlet.flight_details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payment_details</servlet-name>
        <servlet-class>pdetailsevlet.payment_details</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservation</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contact_details</servlet-name>
        <url-pattern>/contact_details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guest_details</servlet-name>
        <url-pattern>/guest_details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>flight_details</servlet-name>
        <url-pattern>/flight_details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment_details</servlet-name>
        <url-pattern>/payment_details</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
